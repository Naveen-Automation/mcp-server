{

  "name": "@automate-io/api-testing-mcp",
  "version": "0.0.19",
  "description": "MCP server for HTTP API testing with Playwright. Supports full CRUD operations, path/query parameters, and comprehensive error handling for API automation workflows.",
  "main": "dist/server.js",
  "bin": {
    "api-testing-mcp": "dist/server.js"
  },
  "publishConfig": {
    "access": "public"
  },
  "files": [
    "dist/**/*",
    "LICENSE"
  ],
  "scripts": {
    "build": "tsc",
    "build:watch": "tsc --watch",
    "dev": "tsx src/server.ts",
    "inspect": "cross-env DANGEROUSLY_OMIT_AUTH=true node_modules\\.bin\\mcp-inspector node_modules\\.bin\\tsx src/server.ts"
  },
  "keywords": [
    "mcp",
    "mcp-server",
    "ai",
    "api-automation",
    "api-testing",
    "playwright-api-automation",
    "model-context-protocol",
    "http",
    "rest"
  ],
  "author": "Veeranki Naveen Goud",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/Naveen-Automation/mcp-server.git"
  },
  "bugs": {
    "url": "https://github.com/Naveen-Automation/mcp-server/issues"
  },
  "homepage": "https://github.com/Naveen-Automation/mcp-server#readme",
  "dependencies": {
    "@modelcontextprotocol/sdk": "1.17.1",
    "@playwright/test": "1.54.2",
    "zod": "3.25.76"
  },
  "devDependencies": {
    "@modelcontextprotocol/inspector": "^0.16.8",
    "@types/node": "24.1.0",
    "cross-env": "10.0.0",
    "tsx": "4.20.3",
    "typescript": "5.9.2"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
